# Configurações do Dispositivo Android
ANDROID_VERSION=11.0
DEVICE_NAME=Pixel_5_API_30
UDID=emulator-5554

# Configurações do Aplicativo
APP_PATH=./apps/ApiDemos-debug.apk
APP_PACKAGE=io.appium.android.apis
APP_ACTIVITY=.ApiDemos

# Configurações do Appium Server
APPIUM_HOST=localhost
APPIUM_PORT=4723

# Configurações de Teste
TEST_ENV=local
IMPLICIT_WAIT=10
EXPLICIT_WAIT=30
COMMAND_TIMEOUT=240

# Configurações de Relatório
ALLURE_RESULTS_DIR=allure-results
ALLURE_REPORT_DIR=allure-report

# Configurações de Screenshot
SCREENSHOT_PATH=./screenshots
TAKE_SCREENSHOT_ON_FAILURE=true

# Configurações de Log
LOG_LEVEL=info
APPIUM_LOG_FILE=./appium.log

# Configurações de Performance
PERFORMANCE_TESTING=false
MAX_LOAD_TIME=10000

# Configurações de Debug
DEBUG_MODE=false
HEADLESS_MODE=false

# Configurações de CI/CD
CI_MODE=false
PARALLEL_EXECUTION=false
MAX_INSTANCES=1